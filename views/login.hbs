<h3><i class="fas fa-book-reader"></i>StoryBooks</h3>
<div class="section">
    <p class="lead">Create public and private from your life</p>
</div>
<div class="divider"></div>
<div class="section">
    <!--
        For google login. Need Key API though
    <a href="/auth/google" class="btn red darken-1">
        <i class="fab fa-google left"></i> Log In with Google
    </a>
    -->
    {{#if session.error}}
    {{#each session.error}}
    <div class="alert alert-danger">{{this}}</div>
    {{/each}}
    {{/if}}
    <form action="/" method="POST">
    <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>
    </div>
    <div>
        <label for"password">Password</label>
        <input type="password" id="password" name="password" required>
    </div>
    <button type="submit">Login</button>
    </form>
    <a href="/register">Register</a>

</div>